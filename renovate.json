{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Kong/public-shared-renovate:backend#1.0.0"
  ],
  "baseBranches": [
    "master"
  ],
  "enabledManagers": [
    "custom.regex",
    "docker-compose",
    "dockerfile",
    "github-actions",
    "gomod",
    "helm-values",
    "kubernetes"
  ],
  "ignorePaths": [],
  "kubernetes": {
    "fileMatch": ["app/kumactl/data/install/k8s/.+\\.ya?ml$"]
  },
  "semanticCommitScope": "deps/{{manager}}",
  "packageRules": [
    {
      "description": "Skip tests for GitHub Actions updates. We match by depType because there isnâ€™t an idiomatic way to target custom manager from Kong/public-shared-renovate:backend preset, which handles Kong/public-shared-actions",
      "matchDepTypes": ["action"],
      "addLabels": ["ci/skip-test"]
    }
  ]
}
